# Copy this file to `.env` and adjust values for your deployment.

##############################
# Web Server / Frontend
##############################
PORT=9000
ALLOWED_ORIGINS=http://192.168.1.184:9000
CAMERA_STREAM_URL=http://127.0.0.1:9101/stream

##############################
# MQTT Bridge (Node.js)
##############################
SITE=gateA
DEVICE_ID=esp32-01
MQTT_URL=mqtt://127.0.0.1:1883
MQTT_USER_SERVER=server
MQTT_PASS_SERVER=12345678
SESSION_TTL_MS=6000

##############################
# Local MQTT Broker (broker.js)
##############################
# Override default 1883 if needed
MQTT_TCP_PORT=1883

##############################
# Camera Pipeline (camera_thumb.py)
##############################
# Broker credentials should match MQTT bridge/broker
MQTT_HOST=127.0.0.1
MQTT_PORT=1883
MQTT_USER=server
MQTT_PASS=12345678
# Camera configuration
CAM_INDEX=0
FRAME_W=640
FRAME_H=480
STREAM_PORT=9101
STREAM_ENABLED=1
STREAM_JPEG_QUALITY=80
SHOW_WINDOW=0

##############################
# Supabase (if using admin APIs)
##############################
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_ANON_KEY=
